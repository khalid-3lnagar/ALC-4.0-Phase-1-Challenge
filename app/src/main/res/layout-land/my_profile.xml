<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfileActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/my_pic"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" tools:ignore="ContentDescription"/>
    <TextView
            android:text="@string/my_name"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_my_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/divider"
            android:fontFamily="serif" android:typeface="serif"/>
    <View android:layout_width="0dp" android:layout_height="1dp"
          android:background="@android:color/black"
          android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="@+id/txt_my_name"
          android:id="@+id/view"
          android:layout_marginEnd="8dp"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_my_name" app:layout_constraintStart_toStartOf="@+id/txt_my_name"
          app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"/>

    <TextView
            android:text="@string/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginTop="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="20sp"/>
    <TextView
            android:text="@string/my_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="serif"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginTop="24dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="20sp"/>
    <TextView
            android:text="@string/my_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="serif"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/slack_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
    <TextView
            android:text="@string/my_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="serif"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/textView12" app:layout_constraintStart_toEndOf="@+id/textView12"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="@string/my_slack_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="serif"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/textView10" app:layout_constraintStart_toEndOf="@+id/textView10"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/view"/>
    <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="serif" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:text="@string/my_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:fontFamily="serif"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="@+id/view"/>

    <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>